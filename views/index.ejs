<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main class="hero">
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">
                <span class="gradient-text"><%= dashboardName %></span>
                <span class="subtitle">Minecraft Server Management</span>
            </h1>
            <p class="hero-description">
                Create, manage, and scale your Minecraft servers with ease. 
                Powered by Pterodactyl & Skyport panels with advanced automation.
            </p>
            
            <div class="hero-actions">
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="btn btn-primary btn-lg">
                        <i class="fas fa-tachometer-alt"></i>
                        Go to Dashboard
                    </a>
                <% } else { %>
                    <a href="/auth/discord" class="btn btn-primary btn-lg">
                        <i class="fab fa-discord"></i>
                        Get Started
                    </a>
                <% } %>
                <a href="#features" class="btn btn-secondary btn-lg">
                    <i class="fas fa-info-circle"></i>
                    Learn More
                </a>
            </div>
        </div>
        
        <div class="hero-stats">
            <div class="stat-card">
                <div class="stat-number">24/7</div>
                <div class="stat-label">Uptime</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">1000+</div>
                <div class="stat-label">Servers</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">99.9%</div>
                <div class="stat-label">Reliability</div>
            </div>
        </div>
    </div>
</main>

<section id="features" class="features">
    <div class="container">
        <h2 class="section-title">Why Choose <%= dashboardName %>?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>Lightning Fast</h3>
                <p>Deploy servers in seconds with our optimized infrastructure</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Secure & Reliable</h3>
                <p>Enterprise-grade security with 99.9% uptime guarantee</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <h3>Easy Management</h3>
                <p>Intuitive control panel with one-click server management</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3>Affordable Pricing</h3>
                <p>Pay for free server (example change views/index.js line 82,83)</p>
            </div>
        </div>
    </div>
</section>
